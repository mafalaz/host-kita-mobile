<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".detail.DetailOrderActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/detailsAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/details_menu_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleCentered="true"
                    app:title="Orderan Anda" />

            </com.google.android.material.appbar.AppBarLayout>

            <ImageView
                android:id="@+id/imageFotoProduk"
                android:transitionName="profile"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/description_image"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/open_sans"
                    android:text="ID Order" />

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/open_sans"
                    android:drawablePadding="10dp"
                    android:text="Nama Produk"/>

                <TextView
                    android:id="@+id/tvDetailNamaProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="@tools:sample/date/day_of_week" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/open_sans"
                    android:text="Jumlah Produk" />

                <TextView
                    android:id="@+id/tvDetailJumlahProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:textSize="16sp"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/open_sans"
                    android:drawablePadding="10dp"
                    android:text="Tanggal Live"/>

                <TextView
                    android:id="@+id/tvDetailTanggalLive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_sans"
                    android:drawablePadding="10dp"
                    android:text="Harga Produk"/>

                <TextView
                    android:id="@+id/tvHargaProduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="@tools:sample/full_names" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Deskripsi" />

                <TextView
                    android:id="@+id/tvDetailDeskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:textSize="16sp"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_sans"
                    android:drawablePadding="10dp"
                    android:text="Status Live"/>

                <TextView
                    android:id="@+id/tvDetailStatusLive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="@tools:sample/full_names" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
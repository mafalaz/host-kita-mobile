<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:background="@color/white"
    tools:context=".ui.getstarted.GetStarted">

    <ImageView
        android:id="@+id/imagepng"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:scaleType="centerCrop"
        android:src="@drawable/getstarted"
        android:contentDescription="@string/description_image"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang Di Host Kita"
        android:fontFamily="@font/open_sans"
        android:gravity="left"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans"
        android:layout_marginStart="12dp"
        android:textColor="@color/blue"
        android:layout_marginEnd="10dp"
        android:text="Sebuah aplikasi yang menghubungkan antara Host Live Streaming dan UMKM untuk melakukan promosi produk sesuai kesepakatan dari kedua belah pihak."
        android:textSize="16sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStarted"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center"
        android:text="GET STARTED"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="#FF5722"/>

</LinearLayout>